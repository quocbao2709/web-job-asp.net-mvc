@model IEnumerable<Job_Web.Models.JobCategory>

<h2>Quản lý ngành nghề</h2>
<a asp-action="Create" class="btn btn-primary">Thêm mới ngành nghề</a>
<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Tên ngành nghề</th>
        <th>Mô tả</th>
        <th>Hành động</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.Profession</td>
            <td>@category.Description</td>
            <td>
                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Sửa</a>
                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>