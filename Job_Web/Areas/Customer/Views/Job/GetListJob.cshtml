@model IEnumerable<Job_Web.Models.Job>

@{
ViewData["Title"] = "Job Listings";
}

<!-- Tiêu đề -->
<h1 class="text-center mb-5 text-primary">@ViewData["Title"]</h1>

<!-- Danh sách các công việc -->
<section class="job-listings">
    <div class="container">
        <div class="row">
            @foreach (var job in Model)
            {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="job-card">
                    <!-- Logo công ty -->
                    <div class="job-card-header">
                        <!-- Hiển thị logo cố định -->
                        <img src="@Url.Content("wwwroot/image/logotuyendung.jpeg")" alt="Company Logo" class="company-logo">
                    </div>

                    <!-- Tiêu đề công việc -->
                    <h3 class="job-title">@job.Title</h3>

                    <!-- Mô tả công việc -->
                    <p class="job-description">@job.Description</p>

                    <!-- Thông tin công việc -->
                    <div class="job-info">
                        <p><i class="bi bi-geo-alt"></i> @job.Location</p>
                        <p><strong>Salary:</strong> @job.Salary.ToString("C")</p>
                        <p><strong>Posted on:</strong> @job.PostedDate.ToShortDateString()</p>
                    </div>

                    <!-- Ngành nghề và nhà tuyển dụng -->
                    <div class="job-footer">
                        <p><strong>Category:</strong> @job.JobCategory.Description</p>
                        <p><strong>Employer:</strong> @job.Employer?.UserName</p>
                    </div>

                    <!-- Nút Apply Now -->
                    <button class="btn btn-primary w-100" onclick="window.location.href='@Url.Action("GetDetailJob", "Job", new { id = job.Id })'">Apply Now</button>
                </div>
            </div>
            }
        </div>
    </div>
</section>

<!-- Styles -->
<style>
    /* Bố cục tổng thể */
    .job-listings {
        padding: 50px 0;
        background-color: #f9f9f9;
    }

    .job-card {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: all 0.3s ease;
    }

    .job-card:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        transform: translateY(-5px);
    }

    /* Thiết kế cho Logo công ty */
    .company-logo {
        width: 100px;
        height: 100px;
        object-fit: contain;
        margin-bottom: 15px;
        border-radius: 50%;
        border: 2px solid #ddd;
    }

    /* Tiêu đề công việc */
    .job-title {
        font-size: 20px;
        font-weight: bold;
        color: #333;
        margin: 10px 0;
    }

    /* Mô tả công việc */
    .job-description {
        font-size: 14px;
        color: #555;
        margin-bottom: 10px;
    }

    /* Thông tin công việc */
    .job-info p {
        font-size: 14px;
        color: #666;
        margin: 5px 0;
    }

    /* Phần footer */
    .job-footer {
        margin-top: 20px;
    }

    /* Thiết kế cho nút Apply Now */
    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        padding: 10px;
        font-size: 16px;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    
    
</style>
