@model Job_Web.Models.Job

<h1>@Model.Title - Applicants</h1>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var application in Model.Applications)
    {
        <tr>
            <td>@application.Customer.UserName</td>
            <td>@application.Customer.Email</td>
            <td>@application.Status</td>
            <td>
                @if (application.Status != "Shortlisted")
                {
                    <form method="post" asp-action="Shortlist" asp-route-jobId="@Model.Id" asp-route-applicantId="@application.CustomerId">
                        <button type="submit" class="btn btn-success">Shortlist</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>