@model Job_Web.Models.Job

<h1>Delete Job</h1>

<h3>Are you sure you want to delete this job?</h3>

<div>
    <h4>@Model.Title</h4>
    <dl class="dl-horizontal">
        <dt>Description</dt>
        <dd>@Model.Description</dd>
        <dt>Location</dt>
        <dd>@Model.Location</dd>
        <dt>Salary</dt>
        <dd>@Model.Salary</dd>
    </dl>
</div>

<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
</form>